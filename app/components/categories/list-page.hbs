{{#liquid-if @addNewCat class="addNew"}}
  <ElCard class="box-card" as |card|>
    <card.body>
      <ElRow @type="flex" as |row|>
        <row.col @span="16">
          <ElInput
            class="new_category_input"
            @size="mini"
            @placeholder={{this.newItem}}
            @value={{this.newItem}}
            {{did-insert this.setInputFocus}}
          />
        </row.col>
        <row.col @span="8">
          <ElButtonGroup>
            <ElButton @color="success" @icon="el-icon-check" @size="mini" @action={{action this.addNewCategory}} />
            <ElButton @color="warning" @size="mini" @icon="el-icon-close" @action={{action this.cancelAdd}} />
          </ElButtonGroup>
        </row.col>
      </ElRow>
    </card.body>
  </ElCard>
{{/liquid-if}}
{{#liquid-if this.editId class="addNew"}}
  <ElCard class="box-card" @shadow="hover" as |card|>
    <card.body>
      <ElRow @type="flex" as |row|>
        <row.col @span="16">
          <ElInput
            class="edit_category_input"
            @size="mini"
            @value={{this.editItem.title}}
            {{did-insert this.setInputFocus}}
          />
        </row.col>
        <row.col @span="8">
          <ElButtonGroup>
            <ElButton
              @color="success"
              @icon="el-icon-check"
              @size="mini"
              @action={{action this.editCategorySave this.editItem}}
            />
            <ElButton
              @color="warning"
              @size="mini"
              @icon="el-icon-close"
              @action={{action this.editCategoryCancel this.editItem}}
            />
          </ElButtonGroup>
        </row.col>
      </ElRow>
    </card.body>
  </ElCard>
{{/liquid-if}}
{{#each this.categories as |cat|}}
  <ElCard class="box-card" @shadow="hover" as |card|>
    <card.body>
      <ElRow @type="flex" as |row|>
        <row.col @span="19">
          {{cat.title}}
        </row.col>
        <row.col @span="5">
          <ElButton
            @color="info"
            @icon="el-icon-edit"
            @circle={{true}}
            @size="mini"
            @action={{action this.editCategory cat}}
          />
          <ElButton
            @color="danger"
            @icon="el-icon-delete"
            @circle={{true}}
            @size="mini"
            @action={{action this.deleteCategory cat}}
          />
        </row.col>
      </ElRow>
    </card.body>
  </ElCard>
{{/each}}