{{#each this.invent as | invnt |}}
  <ElCard class="box-card" as |card|>
    <card.body>
      <ElRow @type="flex" as |row|>
        <row.col @span="19">
          <ElRow @type="flex" as |row|>
            <row.col @span="8">
              Quantity
            </row.col>
            <row.col @span="16">
              {{invnt.quantity}}
            </row.col>
          </ElRow>
          <ElRow @type="flex" as |row|>

            <row.col @span="8">
              Notes
            </row.col>
            <row.col @span="16">
              {{invnt.notes}}
            </row.col>
          </ElRow>
          <ElRow @type="flex" as |row|>
            <row.col @span="8">
              Expiry
            </row.col>
            <row.col @span="16">
              {{moment-format  invnt.expiry "MMM D, YYYY"}}
            </row.col>
          </ElRow>
          <ElRow @type="flex" as |row|>
            <row.col @span="8">
              Added
            </row.col>
            <row.col @span="16">
              {{moment-format  invnt.created "MMM D, YYYY"}}
            </row.col>
          </ElRow>
        </row.col>
        <row.col @span="5">
          <ElButton @color="info" @icon="el-icon-edit" @circle={{true}} @size="mini"
            @action={{action this.editInventory invnt}}>
          </ElButton>

          <ElButton @color="danger" @icon="el-icon-delete" @circle={{true}} @size="mini"
            @action={{action this.deleteInventory invnt}}>
          </ElButton>

        </row.col>
      </ElRow>
    </card.body>
  </ElCard>
{{/each}}