{{#liquid-if @addNewInvent class="addNew"}}
  <ElCard class="box-card" as |card|>
    <card.body>
      <ElRow @type="flex" as |row|>
        <row.col @span="24">
          <ElInput {{did-insert this.setInputFocus }}  @showClear={{true}} @placeholder="Quantity" @class="new_medicine_input" @type="number" @min="0"
            @max="9999" @step="1" @size="mini" @value={{this.newInventoryItem.quantity}} />
        </row.col>
      </ElRow>
      <ElRow @type="flex" as |row|>
        <row.col @span="24">
          <ElInput @showClear={{true}} @placeholder="Expiry Date" @type="date" @size="mini"
            @value={{this.newInventoryItem.expiry}} />
        </row.col>
      </ElRow>
      <ElRow @type="flex" as |row|>
        <row.col @span="24">
          <ElInput @showClear={{true}} @placeholder="Notes" @size="mini" @value={{this.newInventoryItem.notes}} />
        </row.col>
      </ElRow>

      <ElRow @type="flex" as |row|>
        <row.col @span="16">
          <ElButtonGroup>
            <ElButton
              @color="success"
              @icon="el-icon-check"
              @size="mini"
              @action={{action this.addNewInventory}} >
            </ElButton>
            <ElButton
              @color="warning"
              @icon="el-icon-close"
              @size="mini"
              @action={{action this.cancelAdd}} >
            </ElButton>
          </ElButtonGroup>
        </row.col>
      </ElRow>

    </card.body>
  </ElCard>
{{/liquid-if}}


