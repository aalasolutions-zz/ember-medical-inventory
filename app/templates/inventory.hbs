{{#el-container}}
  {{#el-header}}
    {{#el-row  type="flex" as |row|}}

      {{#row.el-col span=2}}
        {{#el-button
          color="text"
          class="back_button"
          icon="el-icon-arrow-left"
          action=(action "changeRoute" "medicines")
        }}
        {{/el-button}}
      {{/row.el-col}}

      {{#row.el-col span=17}}
        <h1>Inventory</h1>
      {{/row.el-col}}
      {{#row.el-col span=5}}

        {{#liquid-if addNewInvent class="addNew"}}
          {{#el-button
            color="warning"
            round=true
            size="mini"
            class="right"
            action=(action "toggleAddNewForm")
          }}
            Cancel
          {{/el-button}}
          {{else}}
          {{#el-button
            color="primary"
            icon="el-icon-circle-plus-outline"
            round=true
            size="mini"
            class="right"
            action=(action "toggleAddNewForm")
          }}
            Add
          {{/el-button}}
        {{/liquid-if}}
      {{/row.el-col}}
    {{/el-row}}

  {{/el-header}}
  {{#el-main}}

    <h2>{{model.name}}</h2>
    <h4>{{model.category.title}}</h4>
    {{inventory/list-page addNewInvent=addNewInvent model=model}}
  {{/el-main}}


  {{#el-footer height="40px"}}
    {{#el-button-group}}
      {{#el-button color="primary"  action=(action "changeRoute" "categories")}}
        Categories
      {{/el-button}}
      {{#el-button color="primary" action=(action "changeRoute" "medicines")}}
        Medicines
      {{/el-button}}
    {{/el-button-group}}
  {{/el-footer}}
{{/el-container}}