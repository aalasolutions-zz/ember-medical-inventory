{{#el-container}}
  {{#el-header}}
    {{#el-row  type="flex" as |row|}}

      {{#row.col span=2}}
        {{#el-button
          color="text"
          class="back_button"
          icon="el-icon-arrow-left"
          action=(action "changeRoute" "medicines")
        }}
        {{/el-button}}
      {{/row.col}}

      {{#row.col span=17}}
        <h1>Inventory</h1>
      {{/row.col}}
      {{#row.col span=5}}

        {{#liquid-if addNewInvent class="addNew"}}
          {{#el-button
            color="warning"
            round=true
            size="mini"
            class="right"
            action=(action "toggleAddNewForm")
          }}
            Cancel
          {{/el-button}}
          {{else}}
          {{#el-button
            color="primary"
            icon="el-icon-circle-plus-outline"
            round=true
            size="mini"
            class="right"
            action=(action "toggleAddNewForm")
          }}
            Add
          {{/el-button}}
        {{/liquid-if}}
      {{/row.col}}
    {{/el-row}}

  {{/el-header}}
  {{#el-main}}

    <h2>{{model.name}}</h2>
    <h4>{{model.category.title}}</h4>
    {{inventory/list-page addNewInvent=addNewInvent model=model}}
  {{/el-main}}


{{/el-container}}