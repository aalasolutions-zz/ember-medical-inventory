<ElContainer>
  <ElHeader>
    <ElRow @type="flex" as |row|>
      <row.col @span="19">
        <h1>Categories</h1>
      </row.col>
      <row.col @span="5">
        {{#liquid-if @addNewCat class="addNew"}}
          <ElButton @color="warning" @round={{true}} @size="mini" class="right" @action={{this.toggleAddNewForm}}>
            Cancel
          </ElButton>
        {{else}}
          <ElButton
            @color="primary"
            @icon="el-icon-circle-plus-outline"
            @round={{true}}
            @size="mini"
            @class="right"
            @action={{this.toggleAddNewForm}}
          >
            Add
          </ElButton>
        {{/liquid-if}}
      </row.col>
    </ElRow>
  </ElHeader>
  <ElMain>
    <Categories::ListPage @addNewCat={{this.addNewCat}} @onCancel={{this.toggleAddNewForm}} />
  </ElMain>
</ElContainer>