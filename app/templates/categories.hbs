{{#el-container}}
  {{#el-header}}
    {{#el-row  type="flex" as |row|}}
      {{#row.col span=19}}
        <h1>Categories</h1>
      {{/row.col}}
      {{#row.col span=5}}
        {{#liquid-if addNewCat class="addNew"}}
          {{#el-button
            color="warning"
            round=true
            size="mini"
            class="right"
            action=(action "toggleAddNewForm")
          }}
            Cancel
          {{/el-button}}
        {{else}}
          {{#el-button
            color="primary"
            icon="el-icon-circle-plus-outline"
            round=true
            size="mini"
            class="right"
            action=(action "toggleAddNewForm")
          }}
            Add
          {{/el-button}}
        {{/liquid-if}}
      {{/row.col}}
    {{/el-row}}

  {{/el-header}}
  {{#el-main}}
    {{categories/list-page addNewCat=addNewCat}}
  {{/el-main}}



{{/el-container}}