{{#liquid-if addNewInvent class="addNew"}}
  {{#el-card class="box-card" as |card|}}
    {{#card.body}}
      {{#el-row type="flex" as |row|}}
        {{#row.el-col span=24}}
          {{el-input
            showClear=true
            placeholder="Quantity"
            class="new_medicine_input"
            type="number"
            min="0"
            max="9999"
            step="1"
            size="mini"
            value=newInventoryItem.quantity}}
        {{/row.el-col}}
      {{/el-row}}
      {{#el-row type="flex" as |row|}}
        {{#row.el-col span=24}}
          {{el-input
            showClear=true
            placeholder="Expiry Date"
            type="date"
            size="mini"
            value=newInventoryItem.expiry}}
        {{/row.el-col}}
      {{/el-row}}
      {{#el-row type="flex" as |row|}}
        {{#row.el-col span=24}}
          {{el-input
            showClear=true
            placeholder="Notes"
            size="mini"
            value=newInventoryItem.notes}}
        {{/row.el-col}}
      {{/el-row}}

      {{#el-row type="flex" as |row|}}
        {{#row.el-col span=16}}
          {{#el-button-group}}
            {{#el-button
              color="success"
              icon="el-icon-check"
              size="mini"
              action=(action "addNewInventory")}}
            {{/el-button}}
            {{#el-button
              color="warning"
              icon="el-icon-close"
              size="mini"
              action=(action "cancelAdd")}}
            {{/el-button}}
          {{/el-button-group}}
        {{/row.el-col}}
      {{/el-row}}

    {{/card.body}}
  {{/el-card}}

{{/liquid-if}}


