{{#each inventory as | invnt |}}
  {{#el-card class="box-card" as |card|}}
    {{#card.body}}
      {{#el-row type="flex" as |row|}}
        {{#row.el-col span=19}}
          {{#el-row type="flex" as |row|}}
            {{#row.el-col span=8}}
              Quantity
            {{/row.el-col}}
            {{#row.el-col span=16}}
              {{invnt.quantity}}
            {{/row.el-col}}
          {{/el-row}}
          {{#el-row type="flex" as |row|}}

            {{#row.el-col span=8}}
              Notes
            {{/row.el-col}}
            {{#row.el-col span=16}}
              {{invnt.notes}}
            {{/row.el-col}}
          {{/el-row}}
          {{#el-row type="flex" as |row|}}
            {{#row.el-col span=8}}
              Expiry
            {{/row.el-col}}
            {{#row.el-col span=16}}
              {{moment-format  invnt.expiry "MMM D, YYYY"}}
            {{/row.el-col}}
          {{/el-row}}
          {{#el-row type="flex" as |row|}}
            {{#row.el-col span=8}}
              Added
            {{/row.el-col}}
            {{#row.el-col span=16}}
              {{moment-format  invnt.created "MMM D, YYYY"}}
            {{/row.el-col}}
          {{/el-row}}
        {{/row.el-col}}
        {{#row.el-col span=5}}
          {{#el-button
            color="info"
            icon="el-icon-edit"
            circle=true
            size="mini"
            action=(action "editInventory" invnt)}}
          {{/el-button}}

          {{#el-button
            color="danger"
            icon="el-icon-delete"
            circle=true
            size="mini"
            action=(action "deleteInventory" invnt)}}
          {{/el-button}}

        {{/row.el-col}}
      {{/el-row}}
    {{/card.body}}
  {{/el-card}}
{{/each}}